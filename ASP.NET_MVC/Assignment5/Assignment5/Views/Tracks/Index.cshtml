@model IEnumerable<Assignment5.Controllers.TrackWithDetail>

@{
    ViewBag.Title = "Index";
    
}

<h2>List of Tracks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Track name
        </th>
        <th>
            Composer
        </th>
        <th>
            Length (ms)
        </th>
        <th>
            Unit pirce
        </th>
        <th>
            Album title
        </th>
        <th>
            Artist name
        </th>
        <th>
            Media type
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Composer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Milliseconds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumArtistName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MediaType.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.TrackId }) 
        </td>
    </tr>
}

</table>
