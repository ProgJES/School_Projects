@model IEnumerable<Assignment6.Controllers.PlaylistWithDetail>

@{
    ViewBag.Title = "Index";
}

<h2>List of playlist</h2>

<table class="table">
    <tr>
        <th>
            Playlist name   
        </th>
        <th>
            Number of tracks on this playlist
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <span class="badge">@Html.DisplayFor(modelItem => item.TracksCount)</span>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlaylistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PlaylistId })
        </td>
    </tr>
}

</table>
