@model IEnumerable<Assignment8.Controllers.ArtistBase>

@{
    ViewBag.Title = "Index";
}

<h2>Artist list</h2>

<p>
    @Html.ActionLink("Create New Artist", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Artist name or stage name
        </th>
        <th>
            If applicable, artist's birth name
        </th>
        <th>
            Birth date, or start date
        </th>
        <th>
            Artist photo
        </th>
        <th>
            Artist primary genre
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthOrStartDate)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.UrlArtist)" width="200" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
